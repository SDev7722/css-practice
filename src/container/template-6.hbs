<header class="header">
	<div class="">
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">

	{{#with info}}
	<div class="info">
		<div class="info_content">
			<h1 class=" info_title">{{title}}</h1>
			<p class="info_description">{{description}}</p>
		</div>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}"
				   placeholder="{{placeholder}}"
				   class="form_input"
				   name="{{name}}"
				   id="form-input-{{id}}" />
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox"
				   name="{{checkbox.name}}"
				   id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit"
				class="form_button">{{button}}</button>
		<div class="form-border"></div>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

{{#with updates}}
<div class="updates">
	<h6 class="updates_title">{{title}}</h6>

	{{#each list}}
	<div class="updates_list_item">
		<div class="color_block"></div>

		<div>
			<span class="upd_name">{{nickname}}</span>
			<p class="upd_description">{{description}}</p>
		</div>
	</div>
	{{/each}}

	{{#with show_all}}
	<a href="{{url}}"
	   class="updates_link">{{text}}</a>
	{{/with}}
</div>
{{/with}}

<section class="card_experience">
	{{#with expirience}}
	<div class="experience">
		<div class="experience_content">
			<h1 class="experience_title">{{title}}</h1>
			<p class="experience_badge">{{badge}}</p>
		</div>
	</div>
	{{/with}}


	{{#with expirience}}
	<div class="card_list">
		{{#each list}}
		<div>
			<strong>{{name}}</strong>
			<p>{{details}}</p>
		</div>
		{{/each}}
	</div>
	{{/with}}
</section>

<footer class="row g-0 footer">
	<div class="col-3">
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div class="col-3">
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>